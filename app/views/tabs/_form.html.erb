<%= form_for(@tab) do |f| %>
  <% if @tab.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tab.errors.count, "error") %> prohibited this tab from being saved:</h2>

      <ul>
      <% @tab.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Cím" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "Leírás" %><br />
    <%= f.cktext_area :description, :toolbar=>'slim', :width=>'100%', :height=>'200px', :skin => "v2" %>
  </div>
  <div class="field">
    <%= f.label :info_id, "Melyik Info-hoz szeretnéd társítani?" %><br />
    <%= f.select("info_id", Info.all.collect {|info| [ info.name, info.id ] }) %>
  </div>
  <div class="field">
    <%= f.label :active, "Aktív," %><br />
    <%= f.select(:active, [['Aktív', true], ['Nem aktív', false]]) %>
  </div>
  <div class="actions">
    <%= f.submit "Rendben!" %>
  </div>
<% end %>
